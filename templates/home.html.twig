{% include 'partials/_header.html.twig' %}

	<main class="main">

		<h1 class="main-title">les deux derniers cocktails</h1>


		<div class="recipes-list-container">

			{% for cocktail in cocktails %}

				<article class="recipe">

					<h2>{{cocktail.nom}}</h2>
					<p>{{cocktail.description}} </p>
					<img class="recipe-image" src="{{cocktail.image}}" alt="{{cocktail.nom}}" />
					<p>Publié le : {{cocktail.date_creation}}</p>
                    <p>Ingrédients :</p>

                    <a href="{{ path('single-cocktail', {'id' : cocktail.id}) }}">Voir le détail du cocktail</a>
				    
					<ul>

						{% for ingredient in cocktail.ingredients %}

							<li>{{ingredient}}</li>
							

						{% endfor %}

					</ul>

				</article>

			{% endfor %}
		</div>

	</main>

{% include 'partials/footer.html.twig' %}