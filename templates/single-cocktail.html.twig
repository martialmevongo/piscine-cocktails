{#extends recupère le fichier de base html#}
{% extends 'base.html.twig' %}

{# definit le contenu du main #}
{% block main %}


		<h1 class="main-title">Détail d'un cocktail</h1>

				<article class="recipe">

					<h2>{{cocktail.nom}}</h2>
					<p>{{cocktail.description}} </p>
					<img class="recipe-image" src="{{cocktail.image}}" alt="{{cocktail.nom}}" />
					<p>Publié le : {{cocktail.date_creation}}</p>

					<p>Ingrédients :</p>

					<ul>

						{% for ingredient in cocktail.ingredients %}

							<li>{{ingredient}}</li>

						{% endfor %}

					</ul>

				</article>



{# definit la fin du contenu du bloc main#}
{% endblock main %}